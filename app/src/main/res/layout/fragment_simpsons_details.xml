<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.characters.presentation.details.SimpsonsDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/fsdMtMainToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_return"
        tools:title="Homer Simpson" />

    <ImageView
        android:id="@+id/fsdIvCharacter"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/fsdMtMainToolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fsdIvCharacter"
        android:background="@drawable/details_container_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/description"
                android:textColor="@color/md_theme_onTertiary_highContrast"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fsdTvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="inherit"
                android:textColor="@color/md_theme_onTertiary_highContrast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/phrases"
                android:textColor="@color/md_theme_onTertiary_highContrast"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fsdRvPhrases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>